<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:x="http://www.w3.org/2001/XMLSchema-instance"
              xmlns:net.sf.jasperreports.engine="http://jasperreports.sourceforge.net/jasperreports"
              name="CourseSchedule" pageWidth="595" pageHeight="842" columnWidth="555" 
              columnCount="1" printOrder="Vertical">

    
    <field name="course.description" class="java.lang.String"/>
    <field name="course.instructor" class="java.lang.String"/>
    <field name="course.duration" class="java.lang.Integer"/>
    <field name="student.username" class="java.lang.String"/>
    <field name="course.startDate" class="java.time.LocalDate"/>

    <title>
        <band height="50">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <text><![CDATA[Course Schedule Report]]></text>
            </staticText>
        </band>
    </title>

    <columnHeader>
        <band height="20">
           
            <staticText>
                <reportElement x="0" y="0" width="200" height="20"/>
                <text><![CDATA[Course Description]]></text>
            </staticText>
            <staticText>
                <reportElement x="100" y="0" width="100" height="20"/>
                <text><![CDATA[Instructor]]></text>
            </staticText>
            <staticText>
                <reportElement x="200" y="0" width="50" height="20"/>
                <text><![CDATA[Duration]]></text>
            </staticText>
            <staticText>
                <reportElement x="300" y="0" width="70" height="20"/>
                <text><![CDATA[Student Name]]></text>
            </staticText>
            <staticText>
                <reportElement x="400" y="0" width="70" height="20"/>
                <text><![CDATA[Start Date]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20">
           
            <textField>
                <reportElement x="0" y="0" width="200" height="20"/>
                <textFieldExpression><![CDATA[$F{course.description}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="100" y="0" width="100" height="20"/>
                <textFieldExpression><![CDATA[$F{course.instructor}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="200" y="0" width="50" height="20"/>
                <textFieldExpression><![CDATA[$F{course.duration}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="300" y="0" width="50" height="20"/>
                <textFieldExpression><![CDATA[$F{student.username}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="400" y="0" width="70" height="20"/>
                <textFieldExpression><![CDATA[$F{course.startDate}.format(java.time.format.DateTimeFormatter.ofPattern("MM/dd/yyyy"))]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="555" height="20"/>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>
    
</jasperReport>